<div class="row">
	<div class="large-8 columns"> </div>
		<div class="large-4 columns">
			<label class="radius secondary label">
				Please enter your email and password :
				</label>
			</br></br>
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <%= f.email_field :email, placeholder:"Please enter your email", :autofocus => true %>
		  <%= f.password_field :password,placeholder:"Please enter your password"%>
			<div class="large-4 columns">
		  	<% if devise_mapping.rememberable? -%>
		    	<%= f.check_box :remember_me%>
		    	<%= f.label :remember_me %>
		  	<% end -%>
			</div>
			<div class="row">
		  <%= f.submit "Log in" ,class: "small button"%>
		  <%= render "users/shared/links" %>
		</div>
		<% end %>
	</div>
</div>
				